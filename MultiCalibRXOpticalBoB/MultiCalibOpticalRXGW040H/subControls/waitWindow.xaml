<Window x:Class="MultiCalibOpticalRXGW040H.waitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCalibOpticalRXGW040H"
        mc:Ignorable="d"
        Title="waitWindow"  Height="150" Width="400" Style="{StaticResource customWindow}" WindowStartupLocation="CenterScreen" Topmost="True" ShowActivated="False" ShowInTaskbar="False" Loaded="Window_Loaded" Unloaded="Window_Unloaded">

    <Border CornerRadius="5" Background="{StaticResource colorBackground}" BorderBrush="{StaticResource colorBorder}"  BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="Orange" CornerRadius="5,5,0,0">
                <Grid>
                    <Label x:Name="lblTitle" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="17" FontWeight="SemiBold" Content="Loading BOSA REPORT Information" Foreground="White"/>
                </Grid>
            </Border>
            <Label x:Name="lblwait" Grid.Row="1" FontSize="50" Content="Please wait...0"/>
        </Grid>
    </Border>
</Window>
